/* components/popup/index.wxss */
.popup-container {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  background: rgba(0, 0, 0, 0.6);
  height: 100%;
  width: 100%;
  overflow: hidden;
  display: flex;
}

.entry {
  animation: fadeInRight 0.5s;
  -webkit-animation: fadeInRight 0.5s;
}

@keyframes fadeInRight {
  from {
    opacity: 1;
    -webkit-transform: translate(1000rpx, 0);
    transform: stranslate(1000rpx, 0);
  }
  to {
    opacity: 1;
    -webkit-transform: translate(0, 0);
    transform: stranslate(0, 0);
  }
}

@-webkit-keyframes fadeInRight {
  from {
    opacity: 1;
    -webkit-transform: translate(1000rpx, 0);
    transform: stranslate(1000rpx, 0);
  }
  to {
    opacity: 1;
    -webkit-transform: translate(0, 0);
    transform: stranslate(0, 0);
  }
}

.output {
  animation: fadeInRightOut 0.5s forwards;
  -webkit-animation: fadeInRightOut 0.5s forwards; 
}

@keyframes fadeInRightOut {
  from {
    opacity: 1;
    -webkit-transform: translate(0, 0);
    transform: stranslate(0, 0);
  }
  to {
    opacity: 1;
    -webkit-transform: translate(1000rpx, 0);
    transform: stranslate(1000rpx, 0);
  }
}

@-webkit-keyframes fadeInRightOut {
  from {
    opacity: 1;
    -webkit-transform: translate(0, 0);
    transform: stranslate(0, 0);
  }
  to {
    opacity: 1;
    -webkit-transform: translate(1000rpx, 0);
    transform: stranslate(1000rpx, 0);
  }
}

.blank {
  width: 20%;
  height: 100vh;
}

.container-content {

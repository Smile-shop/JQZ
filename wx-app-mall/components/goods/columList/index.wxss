/* components/columList/index.wxss */
.wrap {
  display: flex;
}

.container-img {
  position: relative;
  width:200rpx;
  height:200rpx;
  background:rgba(245,245,245,1);
  border-radius:10rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.container-img .shop-img {
  width: 100%;
  height: 100%;
}

.container-img .shop-tag {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(255,255,255,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.container-img .shop-tag .shop-text {
  width: 120rpx;
  height: 120rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.name {
  width:468rpx;
  height:88rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:44rpx;
  /* 超过2行显示省略号 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.tags {
  margin-top: 10rpx;
  margin-bottom: 26rpx;
}

.tag-item {
  display: inline-block;
  width:88rpx;
  height:32rpx;
  line-height: 32rpx;
  border-radius:4rpx;
  font-size:18rpx;
  font-weight:400;
  text-align: center;
  margin-right: 10rpx;
}

.tag-item:first-child {
  color:rgba(255,70,70,1);
  border:1rpx solid rgba(255,70,70,1);
}

.tag-item:nth-child(2) {
  color:rgba(255,178,78,1);
  border:1px solid rgba(255,178,78,1);
}

.tag-item:last-child {
  margin-right: 0;
}

.footer {
  display: flex;
  justify-content: space-between;
  text-align: center;
}

.price, .now-price, .origin-price {
  display: inline-block;
}

.now-price {
  color:rgba(255,70,70,1);
  height:18rpx;
  font-size:20rpx;
  font-weight:600;
  line-height:18rpx;
}

.unit, .precise {
  height:18rpx;
  font-size:20rpx;
  line-height:18rpx;
}

.price-num {
  height:32rpx;
  font-size:32rpx;
  font-weight:600;
  line-height:32rpx;
}

.origin-price {
  height:18rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:18rpx;
  margin-left: 6rpx;
  text-decoration: line-through;
}

.cart {
  display: inline-block;
  color: rgba(255,70,70,1);
}

.container-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
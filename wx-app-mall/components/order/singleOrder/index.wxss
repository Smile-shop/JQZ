/* components/order/singleOrder/index.wxss */
.order {
  background:rgba(255,255,255,1);
}
.order-header {
  display: flex;
  align-items: center;
  height: 87rpx;
  line-height: 87rpx;
  margin: 0 30rpx;
}
.order-mark {
  display: inline-block;
  width:6rpx;
  height:20rpx;
  background: var(--primary-color);
  margin-right: 30rpx;
}
.shop-icon{
  width: 38rpx;
  margin-right: 12rpx;
}
.order-num {
  display: inline-block;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:600;
  color:#333;
  line-height:28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 520rpx;
}
.order-status {
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color: var(--primary-color);
  line-height:24rpx;
  margin-left: auto;
}
.line {
  height:1px;
  background:rgba(238,238,238,1);
  margin: 0 30rpx;
}
.order-content {
  display: flex;
  padding: 30rpx;
}
.order-content:not(:first-child){
  padding-top: 0;
}
.content-img {
  width:176rpx;
  height:176rpx;
  background:rgba(245,245,245,1);
  border-radius:12rpx;
  border:2rpx solid rgba(245,245,245,1);
  margin: 20rpx 20rpx 30rpx 30rpx;
}
.content-name {
  height:40rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
  line-height:40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.content-code {
  margin-top: 6rpx;
  height:34rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
  line-height:34rpx;
}
.content-tag {
  margin-top: 6rpx;
  height:34rpx;
  font-size:22rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
  line-height:34rpx;
}
.tag-item {
  margin-right: 16rpx;
}
.content-certificate {
  margin-top: 6rpx;
  height:34rpx;
  font-size:20rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
  line-height:28rpx;
}
.content-price {
  display: flex;
  justify-content: space-between;
  position: absolute;
  width: calc(100% - 30rpx);
  top: 108rpx;
}
.price-unit {
  height:40rpx;
  font-size:24rpx;
  font-weight:400;
  color:#333;
  font-weight: 600;
  line-height:34rpx;
}
.price-num {
  height:40rpx;
  font-size:24rpx;
  color:#333;
  font-weight: 600;
  line-height:34rpx;
}
.count-unit {
  margin-right: 12rpx;
  height:40rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
  line-height:34rpx;
  }
.count-num {
  height:40rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(77,77,77,1);
  line-height:34rpx;
}
.tip {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width:80rpx;
  height:36rpx;
  line-height: 36rpx;
  font-size:20rpx;
  font-weight:400;
  text-align: center;
}
.order-footer {
  margin: 0 20rpx;
}
.order-total {
  display: flex;
  justify-content: flex-end;
  height:28rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
  line-height:28rpx;
  margin-bottom: 28rpx;
}
.content-img-confirm {
  position: relative;
  width:144rpx;
  height:144rpx;
  background:rgba(245,245,245,1);
  border-radius:12rpx;
  border:2rpx solid rgba(245,245,245,1);
  overflow: hidden;
}
.content-text-confirm {
  flex: 1;
  position: relative;
  height: 144rpx;
  padding-left: 20rpx;
}
.content-code, .content-certificate {
  margin: 6rpx 0rpx;
}
.order-footer-confirm {
  display: flex;
  flex-direction: column;
  margin: 0 30rpx;
}
.sum-price {
  margin-left: 16rpx;
}

.order-mark {
  margin-right: 16rpx;
}

/* 钻石版 */
.order-status-diamand {
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:var(--primary-color);
  line-height:24rpx;
  margin-left: auto;
}

.order-mark-diamand {
  display: inline-block;
  width:6rpx;
  height:20rpx;
  background:var(--primary-color);
}

.sum-totalPrice{
  color: var(--primary-color);
  font-weight: 600;
}
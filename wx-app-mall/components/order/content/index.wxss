/* components/order/content/index.wxss */
.list-content {
  display: flex;
  justify-content: flex-start;
  background-color: rgba(255, 255, 255, 1);
  padding-bottom: 30rpx;
  align-items: center;
}
.container-img {
  position: relative;
  width:144rpx;
  height:144rpx;
  background:rgba(245,245,245,1);
  border-radius:12rpx;
  border:2rpx solid rgba(245,245,245,1);
  margin: 0rpx 30rpx 0rpx 30rpx;
  overflow: hidden;
}
.container-img .image {
  width: 100%;
  height: 100%;
}
.img-tip {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width:80rpx;
  height:36rpx;
  line-height: 36rpx;
  font-size:20rpx;
  text-align: center;
}
.content-text {
  flex: 1;
  margin-right: 30rpx;
  height: 144rpx;
  position: relative;
}
.text-name {
  font-size:28rpx;
  color:#333;
  margin-bottom: 6rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.text-code {
  height:34rpx;
  font-size:24rpx;
  color:rgba(163,170,183,1);
  line-height:34rpx;
  margin-bottom: 6rpx;
}
.text-arg {
  height:34rpx;
  font-size:22rpx;
  color:rgba(163,170,183,1);
  line-height:34rpx;
  margin-bottom: 6rpx;
}
.tag-item {
  margin-right: 16rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.text-certificate {
  height:34rpx;
  font-size:20rpx;
  color:rgba(163,170,183,1);
  line-height:28rpx;
  margin-bottom: 16rpx;
}
.text-total {
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size:24rpx;
  font-weight:400;
  color: var(--primary-color);
  position: absolute;
  top: 110rpx;
}

.sum-count {
  margin-left: 12rpx;
  color: #999;
}

.sum-count {
  font-size: 24rpx;
}

/* 钻石版 */
.img-tip-diamand {
  color:rgba(236,124,104,1);
  background:rgba(255,255,255,1);
  border-radius:18rpx;
}

.goods-box{
  display: flex;
  justify-content: flex-end;
  padding: 0 30rpx 30rpx 30rpx; 
}
.goods-box .goods-btn{
  width: 146rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(255,255,255,1);
  border-radius: 8rpx;
  border: 1rpx solid rgba(204,204,204,1);
  text-align: center;
  font-size: 24rpx;
  color: #333;
}
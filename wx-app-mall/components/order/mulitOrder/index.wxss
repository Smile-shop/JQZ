/* components/order/mulitOrder/index.wxss */
.order {
  background:rgba(255,255,255,1);
}
.order-header {
  display: flex;
  align-items: center;
  height: 87rpx;
  line-height: 87rpx;
  margin: 0 30rpx;
}
.shop-icon{
  width: 35rpx;
  margin-right: 12rpx;
}
.order-num {
  display: inline-block;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:600;
  color:#333;
  line-height:28rpx;
}
.order-status {
  height:24rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:var(--primary-color);
  line-height:24rpx;
  margin-left: auto;
}
.line {
  height:1px;
  background:rgba(238,238,238,1);
  margin: 0 30rpx;
}
.order-content{
  height: 204rpx;
}
.scroll-region {
  display: block;
  width: 100%;
  white-space: nowrap;
  padding: 30rpx;
}
.content-img {
  position: relative;
  display: inline-block;
  width:144rpx;
  height:144rpx;
  line-height: 144rpx;
  background:rgba(245,245,245,1);
  border-radius:12rpx;
  border:2rpx solid rgba(245,245,245,1);
  margin: 0  20rpx 0rpx 0;
  overflow: hidden;
}
.content-img image {
  width: 100%;
  height: 100%;
}

.tip {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width:80rpx;
  height:36rpx;
  line-height: 36rpx;
  font-size:20rpx;
  font-weight:400;
  text-align: center;
}
.content-all {
  position: relative;
  display: inline-block;
  width: 144rpx;
  height: 144rpx;
  line-height: 144rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(153,158,178,1);
}
.icon-region {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.order-footer {
  display: flex;
  flex-direction: column;
  margin: 0 30rpx;
}
.order-total {
  display: flex;
  justify-content: flex-end;
  height:28rpx;
  line-height:28rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
  margin-bottom: 28rpx;
}

.sum-goods {
  margin-right: 12rpx;
}

.order-mark {
  margin-right: 16rpx;
}

.sum-totalPrice {
  color: var(--primary-color);
  font-weight: 600;
  }
  

/* 钻石版 */
.order-status-diamand {
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:var(--primary-color);
  line-height:24rpx;
  margin-left: auto;
}

.order-mark {
  display: inline-block;
  width:6rpx;
  height:20rpx;
  background: var(--primary-color);
}

.tip-diamand {
  border-radius: 18rpx;
  background:rgba(255,255,255,1);
  color:rgba(236,124,104,1);
}

.price-unit-diamand, .sum-totalPrice-diamand {
  color: rgba(77,77,77,1);
}

.sum-totalPrice-diamand {
  font-weight: 600;
}
/* pages/shoppingCart/irclassify/index.wxss */
.shopping-cart {
  height: calc(100vh - 100rpx - 100rpx - 20rpx - 50px - 20rpx);
  height: calc(100vh - 100rpx - 100rpx - 20rpx - 50px - 20rpx - constant(safe-area-inset-bottom));
  height: calc(100vh - 100rpx - 100rpx - 20rpx - 50px - 20rpx - env(safe-area-inset-bottom));
  margin-top: 20rpx;
}
.shopping-cart-catery {
  background-color: #fff;
  /* margin-bottom: 20rpx; */
  margin: 20rpx 0;
}
.select-content-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx;
  height: 100rpx;
}
.shopping-item {
  display: flex;
  padding: 20rpx;
}
.button {
  background-color: var(--primary-color);
  height: 144rpx;
  line-height: 144rpx;
  text-align: center;
  width: 300rpx;
  font-size: 28rpx;
  color: #fff;
  display: flex;
  position: absolute;
  top: 20rpx;
}

.delbtn{
  color: #fff;
  width:50%;
}

.collect{
  flex: 1;
  background-color: var(--cart-btn-color);
}
.shopping-item-img {
  width: 144rpx;
  height: 144rpx;
  margin: 0 20rpx;
  flex-shrink: 0;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}
.shopping-item-img-mask {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -44rpx;
  margin-top: -44rpx;
  z-index: 20;
  width: 88rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 20rpx;
  border-radius: 200rpx;
}
.shopping-goods-tag {
  position: absolute;
  left: 100rpx;
  top: 24rpx;
  width: 80rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 20rpx;
  text-align: center;
  border-radius: 36rpx;
  background-color: #fff;
}
.shopping-item-info {
  flex-grow: 1;
}
.shopping-item-name {
  width: 400rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  min-height: 45rpx;
}
.more-show-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.shopping-item-code, .shopping-item-detail, .shopping-item-credentials {
  width: 400rpx;
  font-size: 22rpx;
  color:  #bbb;
  /* min-height: 45rpx; */
}
.shopping-item-number {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  position: absolute;
  bottom: 30rpx;
  right: 15rpx;
  width: 485rpx;
  height: 60rpx;
}
.item-price{
  font-size:28rpx;
  color:var(--primary-color);
  font-weight:600
}
.shopping-cart-number {
  padding-right: 20rpx;
}

.submit-bar {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.submit-bar-select {
  flex-grow: 1;
  padding-left: 28rpx;
  font-size: 28rpx;
  color: #4D4D4D;
}
.submit-bar-info {
  width: 268rpx;
  flex-shrink: 0;
  text-align: right;
  padding-right: 12rpx;
}
.submit-bar-button {
  width: 200rpx!important;
  border-radius: 0;
  padding: 0;
  font-weight: normal;
  flex-shrink: 0;
  background-color: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.submit-bar-money{
  font-size: 24rpx;
}
.submit-bar-price{
  font-size:28rpx;
  font-weight:bold;
  color: var(--primary-color);
}


.collect-btn{
  background-color: var(--cart-btn-color);
}
.shoppping-list-bottom{
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
}
.clear{
  color: var(--primary-color);
  width: 60rpx;
}
.title{
  flex: 1;
  font-weight: bold;
}
.shopping-item-name-novalid{
  color: #bbb;
}
.collectBox{
  justify-content: flex-end;
}
.collectBtn{
  width: 150rpx;
  height: 48rpx;
  color: #666;
  font-size: 22rpx;
  text-align: center;
  line-height: 48rpx;
  border-radius: 6rpx;
  border:1px solid rgba(204,204,204,1);
}
.stockNum{
  position: absolute; 
  right: 40rpx;
  color: var(--primary-color);
  bottom: 100rpx;
}
.input{
  color: #333!important;
}
.disable-btn{
  background-color: #ddd;
}


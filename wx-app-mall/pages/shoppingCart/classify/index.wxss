/* pages/shoppingCart/classify/index.wxss */
.shopping-cart {
  height: calc(100vh - 100rpx - 100rpx - 20rpx - 50px);
  height: calc(100vh - 100rpx - 100rpx - 20rpx - 50px - constant(safe-area-inset-bottom));
  height: calc(100vh - 100rpx - 100rpx - 20rpx - 50px - env(safe-area-inset-bottom));
  margin-top: 20rpx;
}
.shopping-cart-catery {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.select-content-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx;
  height: 100rpx;
}
.shopping-item {
  display: flex;
  /* height: 180rpx; */
  padding: 28rpx;
}
/* 删除按钮 */
.button {
  background-color: var(--primary-color);
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  width: 292rpx;
  font-size: 28rpx;
  color: #fff;
  display: flex;
}
.delbtn{
  width: 146rpx;
  color: #fff;
}
.collect{
  width: 146rpx;
  background-color: var(--cart-btn-color);
}
/* 图片 */
.shopping-item-img {
  width: 144rpx;
  height: 144rpx;
  margin: 0 20rpx;
  flex-shrink: 0;
  position: relative;
  overflow: hidden;
  border-radius: 12rpx;
}
/* 商品蒙层 */
.shopping-item-img-mask {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2000;
  width: 144rpx;
  height: 144rpx;
  background-color: rgba(0, 0, 0, .1);
}
.shopping-item-img-mask-title {
  width: 152rpx;
  height: 152rpx;
  line-height: 152rpx;
  border-radius: 50%;
  text-align: center;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  font-size: 32rpx;
  margin: 32rpx auto;
}
/* 标签 */
.shopping-goods-tag {
  position: absolute;
  left: 100rpx;
  top: 24rpx;
  z-index: 1000;
  width: 80rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 20rpx;
  text-align: center;
  border-radius: 36rpx;
  background-color: #fff;
}
.shopping-item-info {
  flex-grow: 1;
  position: relative;
}
.shopping-item-name {
  width: 400rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  min-height: 45rpx;
  margin-top: 4rpx;
}
.more-show-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.shopping-item-code, .shopping-item-detail, .shopping-item-credentials {
  width: 400rpx;
  font-size: 24rpx;
  color:  #A3AAB7;
  /* min-height: 45rpx; */
}
.shopping-item-number {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
  width: 45rpx;
  height: 60rpx;
}
.item-price{
  font-size:28rpx;
  color:var(--primary-color);
  font-weight:600
}
.shopping-cart-number {
  padding-right: 20rpx;
}
.submit-bar {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.submit-bar-select {
  flex-grow: 1;
  padding-left: 28rpx;
  font-size: 28rpx;
  color: #4D4D4D;
}
.submit-bar-info {
  width: 268rpx;
  flex-shrink: 0;
  text-align: right;
  padding-right: 12rpx;
}
.submit-bar-button {
  width: 200rpx;
  flex-shrink: 0;
  background-color: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.submit-bar-money{
  font-size: 24rpx;
}
.submit-bar-price{
  font-size:28rpx;
  font-weight:bold;
  color: var(--primary-color);
}
.global-buy{
  position: absolute;
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  background:rgba(212,109,104,1);
  border-radius:2px;
  color: #fff;
  font-size: 20rpx;
  font-weight: 400;
  text-align: center;
  bottom: 40rpx;
  left: 96rpx;
}
.rcd1-title {
  display: flex;
  align-items: center;
  padding: 30rpx;
  height: 40rpx;
  margin-top: 30rpx;
  background-color: #fff;
}

.rcd1-title-name {
  font-size: 36rpx;
  color: #4D4D4D;
  font-weight: bold;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 30rpx;
}

.rcd1-title-name-icon {
  width: 40rpx;
}

.rcd1-title-more {
  font-size: 24rpx;
  color: #A3AAB7;
  height: 30rpx;
  display: flex;
  align-items: center;
}

.rcd1-title-more-icon {
  width: 24rpx;
  margin-left: 10rpx;
}

.rcd1-poster {
  width: 690rpx;
  height: 320rpx;
  background: #f2f3f4;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0rpx 30rpx 20rpx 30rpx;
}

.rcd1-poster-image {
  width: 100%;
  height: 100%;
}

.rcd1-content {
  white-space: nowrap;
  background-color: #fff;
}

.rcd1-content-moreB {
  display: inline-block;
  font-size: 24rpx;
  width: 80rpx;
  text-align: center;
  white-space: normal;
  position: relative;
  top: -30px;
}

.rcd1-content-moreB-more {
  display: inline-block;
  width: 30rpx;
  height: 176rpx;
}

.rcd1-content-moreB-more-icon {
  width: 24rpx;
  margin-top: 10rpx;
}

.rcd1-content-item {
  display: inline-block;
  width: 176rpx;
  background: white;
  border-radius: 12px;
  box-sizing: border-box;
  margin: 20rpx 0 20rpx 28rpx;
}

.rcd1-content-item:last-child {
  margin-right: 28rpx;
}

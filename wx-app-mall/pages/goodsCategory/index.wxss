/* pages/goodsCategory/index.wxss */
.goodsCategory-top {
  height: 100rpx;
  background: #fff;
  margin-bottom: 30rpx;
 }
 
 .search {
   position: fixed;
   top: 0rpx;
   width: 100%;
   background: #fff;
   z-index: 9;
 }
 
 .search-img {
   width: 32rpx;
   height: 32rpx;
   margin: 0 30rpx;
   color:rgba(163,170,183,1)
 }
 
 .search-container {
   display: flex;
   align-items: center;
   margin: 0 auto;
   width: 690rpx;
   height: 72rpx;
   background:rgba(245,245,245,1);
   border-radius: 10rpx;
   margin-top: 20rpx;
 }
 
 .search-icon {
   font-size: 40rpx;
   margin-left: 22rpx;
   margin-right: 16rpx;
   margin-top: 12rpx;
   color: #A3AAB7;
 }
 
 .search-text {
   display: inline-block;
   width: 50rpx;
   height: 34rpx;
   font-size: 24rpx;
   color:rgba(163,170,183,1);
   line-height: 34rpx;
 }
 
 .list-container {
   display: flex;
   width: 100%;
   height: 100%;
 }
 
 .menus {
   width: 20%;
   position: fixed;
   left: 0;
   overflow: auto;
 }
 
 .list {
   width: 80%;
   float: right;
   position: fixed;
   right: 0;
   overflow: auto;
 }
 
 .list_child_item {
   display: inline-block;
 }
 
 .item-color {
   font-size: 24rpx;
   color:rgba(163,170,183,1);
 }
 
 .list_child_selected_item {
   font-size: 24rpx;
   color:rgba(77,77,77,1);
 }
 
 .confirm {
   overflow: hidden;
   height: 80rpx;
   line-height: 80rpx;
   /* width: 100%; */
   width: 72%;
   position: fixed;
   display: flex;
   align-items: center;
   background:rgba(245,245,245,1);
   border-radius: 50rpx;
   right: 20rpx;
   bottom: calc(120rpx + constant(safe-area-inset-bottom));
   bottom: calc(120rpx + env(safe-area-inset-bottom));
   font-size: 28rpx;
   z-index: 99;
 }
 
 .confirm-show {
   padding-left: 31rpx;
   flex: 4;
   height: 100rpx;
   line-height: 100rpx;
 }
 
 .confirm-show-text {
   font-size: 24rpx;
 }
 
 .confirm-show-number {
   font-size: 28rpx;
   font-weight: bold;
 }
 
 .reset {
   height: 100rpx;
   line-height: 100rpx;
   flex: 2;
   display: flex;
   justify-content: center;
   font-size: 28rpx;
   color:rgba(77,77,77,1);
 }
 
 .confirm-btn {
   height: 100rpx;
   line-height: 100rpx;
   flex: 2;
   display: flex;
   justify-content: center;
   background:rgba(77,77,77,1);
   font-size: 28rpx;
   color:rgba(255,255,255,1);
 }
 .confirm-selected {
   height: 100%;
   width: 60%;
   background:rgba(77,77,77,1);
   text-align: center;
   color: #fff;
 }
 .goods-text {
   font-size: 22rpx;
 }
 
 /*  */
 .container {
   /* padding-bottom: 20rpx; */
   width:100%;
   /* height: 81.5vh; */
   height: calc(100vh - 130rpx - 50px - constant(safe-area-inset-bottom));
   height: calc(100vh - 130rpx - 50px - env(safe-area-inset-bottom));
   display: flex;
   flex-direction: row;
   align-items: flex-start;
   background: #fff;
 }
 
 .category-left {
   height: 100%;
   width: 22%;
   box-sizing: border-box;
   background: rgba(245,245,245,1);
 }
 
 .scoll-main {
   height: calc(100vh - 100rpx - 50px - env(safe-area-inset-bottom));
 }
 
 .menus-item {
   font-size: 28rpx;
   font-weight:400;
   color:rgba(163,170,183,1);
 }
 
 .catgegory-item {
   padding: 20rpx 0;
   font-size: 28rpx;
   text-align: center;
   color: rgba(163,170,183,1);
   overflow: hidden;
 }
 
 .catgegory-item-letter {
   width: 160rpx;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
 }
 
 .active-item {
   font-size: 28rpx;
   font-weight:600;
   color:rgba(77,77,77,1);
   background: #fff;
 }
 
 .catgegory-item-text {
   padding-left: -20rpx;
   border-left: 4rpx solid #000000;
 }
 
 .category-right {
   flex:1;
   height: 100%;
   box-sizing: border-box;
 }
 
 .vice-main {
   height: calc(100vh - 100rpx - 52px - 100rpx - env(safe-area-inset-bottom));
 }
 
 .category-content {
   display: grid;
   grid-template-columns: repeat(auto-fill, 190rpx);
 }
 
 .category-title {
   text-align: left;
   margin-left: 30rpx;
   padding-top: 24rpx;
 }
 
 .category-title-item {
   width: 112rpx;
   height: 40rpx;
   font-size: 28rpx;
   color:rgba(77,77,77,1);
   line-height: 40rpx;
 }
 
 .content-item {
   width: 152rpx;
   height: 56rpx;
   line-height: 56rpx;
   background:rgba(245,245,245,1);
   border-radius:4rpx;
   margin: 15rpx 30rpx;
   text-align: center;
   overflow: hidden;
   position: relative;
   text-overflow: ellipsis;
   white-space: nowrap;
 }
 
 .item-tag {
   position: absolute;
   right: 0;
   bottom: 0;
   width: 24rpx;
   height: 24rpx;
 }
 
 .content-item .item-tag image {
   width: 100%;
   height: 100%;
   position: absolute;
   top: 0;
   left: 0;
 }
 
 .filter-container {
   display: grid;
   grid-row-gap: 30rpx;
   margin-top: 20rpx;
   margin-bottom: 20rpx;
 }
 
 .row-filter {
   display: grid;
   grid-template-columns: 30% 70%;
 }
 
 .row-title {
   display: flex;
   height: 56rpx;
   font-size:24rpx;
   color:rgba(77,77,77,1);
   margin-left: 30rpx;
   margin-right: 20rpx;
   line-height: 56rpx;
   overflow: hidden;
 }
 
 .row-titleUnit {
   width: 120rpx;
   text-align: justify;
   overflow: hidden;
   margin-left: 12rpx;
 }
 
 .row-titleUnit::after {
   display: inline-block;
   content: '';
   width: 100%;
 }
 
 .row-content {
   display: flex;
   align-items: center;
 }
 
 .price-input {
   display: inline-block;
   width:150rpx;
   height:56rpx;
   background:rgba(245,245,245,1);
   border-radius:4rpx;
   text-align: center;
   color: #4D4D4D;
   font-size: 24rpx;
 }
 
 .row-link {
   width:80rpx;
   font-size:24rpx;
   color:rgba(77,77,77,1);
   line-height:34rpx;
   text-align: center;
 }
 .category-item{
   font-size: 24rpx;
   font-weight:400;
   color: #333333;
 }

 .category-loading {
   position: fixed;
   top: 0;
   right: 0;
   bottom: 0;
   left: 0;
   background-color: #fff;
   z-index: 999;
 }
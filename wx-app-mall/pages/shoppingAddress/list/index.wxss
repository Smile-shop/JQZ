.list-item {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 30rpx 30rpx 20rpx 30rpx;
}

.list-item-left {
  flex: 1;
  color: #333;
  line-height: 45rpx;
}

.list-item-left-top {
  font-size: 28rpx;
  display: flex;
}

.list-item-left-top-name {
  max-width: 54%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.default-tip {
  width: 54rpx; 
  height: 28rpx; 
  line-height: 28rpx; 
  font-size: 18rpx; 
  font-weight: 400; 
  background: #FF4646;
  border-radius: 4rpx; 
  color: #FFFFFF; 
  text-align: center;
  margin-left: 16rpx;
  margin-top: 12rpx;
}

.list-item-left-bottom {
  font-size: 24rpx;
}

.list-item-right .icon {
  font-size: 38rpx;
  color: #333;
}

.list-button {
  line-height: 140rpx;
  width: 160rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background-color: var(--primary-color);
}

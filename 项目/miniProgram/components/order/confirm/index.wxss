/* components/order/confirm/index.wxss */
.confirm-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background:rgba(0,0,0,0.5);
}

.modal {
  width:560rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  overflow: hidden;
}

.modal-title {
  margin-top: 40rpx;
  text-align: center;
  font-size:32rpx;
  font-weight:bold;
  color:rgba(77,77,77,1);
  margin-bottom: 40rpx;
}

.modal-input {
  position: relative;
}
.input-placeholder {
  height:34rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(163,170,183,1);
}

.note-tip {
  height: 20rpx;
  line-height: 20rpx;
  margin: 0 30rpx;
  margin-top: 10rpx;
  font-size: 20rpx;
  font-weight:400;
  color:rgba(255,0,0,1);
}

.note-placeholder {
  padding-top: 30rpx;
  margin-top: 30rpx;
}

.modal-split {
  height:40rpx;
}

.modal-operating {
  display: flex;
  height: 80rpx;
}

.modal-cancel {
  flex: 50%;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  text-align: center;
  background:rgba(245,245,245,1);
  font-size:28rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
}

.modal-confirm {
  flex: 50%;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  text-align: center;
  font-size:28rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}

textarea {
  box-sizing: border-box;
  width:500rpx;
  height:168rpx;
  background:rgba(245,245,245,1);
  border-radius:4rpx;
  padding: 14rpx 28rpx 50rpx 20rpx;
  margin: 0 30rpx;
}

.total-input {
  position: absolute;
  right: 48rpx;
  bottom: 20rpx;
  width:56rpx;
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(163,170,183,1);
  line-height:24rpx;
  background: rgba(245,245,245,1);
  z-index: 99;
}

/* 钻石版 */
.modal-confirm-diamand {
  background:rgba(77,77,77,1);
}

/* 黄金版 */
.modal-confirm-gold {
  background:linear-gradient(90deg,rgba(221,178,127,1) 0%,rgba(219,176,81,1) 100%);
}
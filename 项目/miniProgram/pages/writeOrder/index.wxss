/* pages/writeOrder/index.wxss */
.scroll {
  /* height: calc(100vh - 98rpx);  */
  overflow: hidden;
}
.header {
  background:rgba(255,255,255,1);
  height: 170rpx;
  display: flex;
  align-items: center;
}
.header-icon {
  margin-left: 30rpx;
  margin-right: 22rpx;
  width:56rpx;
  height:56rpx;
}
.header-icon image {
  width: 100%;
  height: 100%;
}
.header-text {
  display: inline-block;
}
.header-name {
  margin-bottom: 14rpx;
  height:28rpx;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(77,77,77,1);
  line-height:28rpx;
}
.header-address {
  height:34rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(163,170,183,1);
  line-height:34rpx;
}
.note {
  display: flex;
  background:rgba(255,255,255,1);
  flex-direction: column;
}
.note-title {
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(77,77,77,1);
}
.note-write {
  margin-left: 30rpx;
  margin-bottom: 30rpx;
}
input {
  height: 24rpx;
  line-height: 24rpx;
}
.input-placeholder {
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(204,204,204,1);
  line-height:24rpx;
}
.goods {
  display: flex;
  flex-direction: column;
  background:rgba(255,255,255,1);
  margin-bottom: 100rpx;
}
.goods-name {
  height:88rpx;
  line-height: 88rpx;
  background:rgba(255,255,255,1);
  margin-left: 30rpx;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(77,77,77,1);
}
.goods-content {
  display: flex;
}
.goods-text {
  flex: 1;
  margin-right: 30rpx;
}
.goods-img {
  position: relative;
  width:216rpx;
  height:216rpx;
  background:rgba(245,245,245,1);
  border-radius:12rpx;
  border:2rpx solid rgba(245,245,245,1);
  margin: 0rpx 30rpx 30rpx 30rpx;
  overflow: hidden;
}

.goods-img-region {
  width: 100%;
  height: 100%;
}
.goods-img-region image {
  width: 100%;
  height: 100%;
}
.text-name {
  height:40rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(77,77,77,1);
  line-height:40rpx;
  margin-top: 4rpx;
}
.text-code {
  height:34rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(163,170,183,1);
  line-height:34rpx;
  margin-top: 6rpx;
}
.text-arg {
  height:34rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
  line-height:34rpx;
  margin-top: 6rpx;
}
.text-space {
  padding-right: 12rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
}
.text-certificate {
  height:34rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
  line-height:34rpx;
  margin-top: 6rpx;
}
.text-total {
  display: flex;
  justify-content: space-between;
  height:40rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
  line-height:34rpx;
  margin-top: 16rpx;
}
.total-unit {
  padding-right: 14rpx;
}
.count-price {
  height:40rpx;
  font-size:24rpx;
  font-weight:600;
  color:rgba(77,77,77,1);
  line-height:34rpx;
}
.count-nun {
  height:40rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(77,77,77,1);
  line-height:34rpx;
}
.load-more {
  text-align: center;
  margin-top: 14rpx;
  margin-bottom: 40rpx;
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(163,170,183,1);
  line-height:24rpx;
}
.split {
  height:20rpx;
  background:rgba(245,245,245,1);
}
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background:rgba(255,255,255,1);
  height: 98rpx;
  line-height: 98rpx;
}
.total {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.top {
  height:1rpx;
  background:rgba(238,238,238,1);
}
.total-text {
  margin-left: 30rpx;
}
.total-buy {
  margin-right: 30rpx;
  width:200rpx;
  height:72rpx;
  line-height: 72rpx;
  background:rgba(77,77,77,1);
  border-radius:50rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  text-align: center;
}
.sum-price {
  display: inline-block;
  margin-left: 20rpx;
}

/* 黄金版 */
.header-gold {
  background:rgba(219,176,81,1);
  height: 200rpx;
  display: flex;
  align-items: center;
}

.note-gold {
  display: flex;
  background:rgba(255,255,255,1);
  flex-direction: column;
  border-radius:20px 20px 0px 0px;
  margin-top: -30rpx;
}

.header-name-gold {
  margin-bottom: 14rpx;
  height:28rpx;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  line-height:28rpx;
}

.header-address-gold {
  height:34rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:34rpx;
}

/* 钻石版 */
.total-buy-diamand {
  background:rgba(77,77,77,1);
  color:rgba(255,255,255,1);
}

.sum-price-diamand {
  font-size: 36rpx;
  font-weight: 600;
}

.count-price-diamand {
  font-size: 28rpx;
}

.count-nun-diamand {
  font-size: 28rpx;
}

.book-diamand {
  position: absolute;
  width:80rpx;
  height:36rpx;
  line-height: 36rpx;
  background:rgba(255,255,255,1);
  border-radius:18rpx;
  margin-top: 12rpx;
  margin-left: 12rpx;
  text-align: center;
  font-size:20rpx;
  font-weight:400;
  color:rgba(236,124,104,1);
}

/* 黄金版 */
.total-buy-gold {
  background:linear-gradient(90deg,rgba(221,178,127,1) 0%,rgba(219,176,81,1) 100%);
  color:rgba(255,255,255,1);
}

.sum-price-gold {
  color:rgba(193,17,17,1);
  font-size: 36rpx;
  font-weight: 600;
}

.count-price-gold {
  font-size: 28rpx;
  color:rgba(193,17,17,1);
}

.count-nun-gold {
  font-size: 28rpx;
}

.price-unit-gold {
  color:rgba(193,17,17,1);
}

.book-gold {
  position: absolute;
  width:80rpx;
  height:36rpx;
  line-height: 36rpx;
  background:rgba(212,109,104,1);
  border-radius:2rpx;
  margin-top: 12rpx;
  margin-left: 12rpx;
  text-align: center;
  font-size:20rpx;
  font-weight:400;
  color:rgba(255, 255, 255, 1);
}
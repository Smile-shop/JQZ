/* pages/shoppingCart/irclassify/index.wxss */
.shopping-cart {
  height: calc(100vh - 100rpx - 100rpx - 20rpx - 50px);
  height: calc(100vh - 100rpx - 100rpx - 20rpx - 50px - constant(safe-area-inset-bottom));
  height: calc(100vh - 100rpx - 100rpx - 20rpx - 50px - env(safe-area-inset-bottom));
  margin-top: 20rpx;
}
.shopping-cart-catery {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.select-content-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx;
  height: 100rpx;
}
.shopping-item {
  display: flex;
  /* height: 180rpx; */
  padding: 14rpx;
}
.delete-button {
  background-color: #EC7C68;
  height: 240rpx;
  line-height: 240rpx;
  text-align: center;
  width: 60px;
  font-size: 28rpx;
  color: #fff;
}
.shopping-item-img {
  width: 216rpx;
  height: 216rpx;
  margin: 0 20rpx;
  flex-shrink: 0;
  position: relative;
}
.shopping-item-img-mask {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2000;
  width: 216rpx;
  height: 216rpx;
  background-color: rgba(0, 0, 0, .1);
}
.shopping-item-img-mask-title {
  width: 152rpx;
  height: 152rpx;
  line-height: 152rpx;
  border-radius: 50%;
  text-align: center;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  font-size: 32rpx;
  margin: 32rpx auto;
}
.shopping-goods-tag {
  position: absolute;
  left: 100rpx;
  top: 24rpx;
  width: 80rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 20rpx;
  text-align: center;
  border-radius: 36rpx;
  background-color: #fff;
}
.shopping-item-info {
  flex-grow: 1;
}
.shopping-item-name {
  width: 400rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #4D4D4D;
  min-height: 45rpx;
}
.more-show-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.shopping-item-code, .shopping-item-detail, .shopping-item-credentials {
  width: 400rpx;
  font-size: 24rpx;
  color:  #A3AAB7;
  /* min-height: 45rpx; */
}
.shopping-item-number {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
  width: 415rpx;
  height: 60rpx;
}
.shopping-cart-number {
  padding-right: 20rpx;
}

.submit-bar {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.submit-bar-select {
  flex-grow: 1;
  padding-left: 28rpx;
  font-size: 28rpx;
  color: #4D4D4D;
}
.submit-bar-info {
  width: 268rpx;
  flex-shrink: 0;
  text-align: right;
  padding-right: 12rpx;
}
.submit-bar-money {
  font-size: 24rpx;
  color: #4D4D4D;
}
.submit-bar-number {
  font-size: 24rpx;
  color: #A3AAB7;
}
.submit-bar-button {
  width: 200rpx;
  flex-shrink: 0;
  background-color: #4D4D4D;
  color: #fff;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.shopcart-price-1-style{
  color: #C11111 !important;
  padding-left: 36rpx;
}
.submit-bar-button-1-style{
  width:200rpx;
  height:72rpx;
  line-height: 72rpx;
  background:linear-gradient(90deg,rgba(221,178,127,1) 0%,rgba(219,176,81,1) 100%);
  border-radius:38px;
  color: #fff;
  margin: 0 20rpx;
}
.delete-button-1-style{
  background:#C11111;
}
.global-buy{
  position: absolute;
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  background:rgba(212,109,104,1);
  border-radius:2px;
  color: #fff;
  font-size: 20rpx;
  font-weight: 400;
  text-align: center;
  top: 32rpx;
  left: 96rpx;
}
.shopping-cart-catery-1-style{
  margin: 0 20rpx 20rpx;
  border-radius:20rpx;
}
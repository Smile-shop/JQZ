/* components/local/goodsEvaluate/index.wxss */
.evaluate-wrapper {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}
.evaluate-box:not(:nth-child(1)) {
  margin-top: 70rpx;
}
.evaluate-view {
  display: flex;
}
.evaluate-avator {
  width: 80rpx;
  height: 80rpx;
}
.evaluate-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.evaluate-right-box {
  flex: 1;
  margin-left: 30rpx;
}
.evaluate-name-box {
  display: flex;
  justify-content: space-between;
}
.evaluate-name {
  flex: 1;
}
.evaluate-na {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.evaluate-star .star-icon {
  color: #FFCC02;
  margin-right: 10rpx;
  font-size: 28rpx;
}
.evaluate-time {
  font-size:24rpx;
  color: #999;
}
.comment-box {
  color: #333;
  font-size: 24rpx;
  margin-top: 22rpx;
}
.comment-image-box {
  display: grid;
  grid-template-columns: repeat(3, 180rpx);
  grid-gap: 20rpx;
  margin-top: 20rpx;
}
.comment-img {
  width: 180rpx;
  height: 180rpx;
}
.evaluate-saler {
  padding: 20rpx;
  background-color: #F8F8F8;
  margin-top: 30rpx;
}
.evaluate-txt1 {
  font-size: 24rpx;
  color: #666;
}
.evaluate-txt2 {
  font-size: 22rpx;
  color: #666;
  margin-top: 14rpx;
}

/* 暂无评论 */
.empty-evaluate {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-img {
  width: 320rpx;
  height: 234rpx;
  margin-top: 110rpx;
  margin-bottom: 60rpx;
}

.empty-text {
  height:40rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(170,170,170,1);
  line-height:40rpx;
}
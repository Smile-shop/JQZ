/* components/local/hotGoods/index.wxss */
.hot-content {
  font-size: 0;
  position: relative;
}
.hot-goods-img {
  width: 100%;
  height: 332rpx;
  border-radius: 10rpx 10rpx 0 0;
  background-color: #F5F5F5;
  font-size: 0;
  overflow: hidden;
}
.hot-goods-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 80rpx;
  height: 34rpx;
  border-radius: 18rpx;
  background-color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 34rpx;
}
.hot-goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  height: 88rpx;
  margin: 24rpx 0;
}
.hot-goods-info {
  display: flex;
  font-size: 20rpx;
  font-weight: 600;
  justify-content: space-between;
  font-size: 10px;
  padding-top: 5px;
}
.hot-goods-info-left {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-left: 10rpx;
  color: var(--primary-color);
}
.hot-goods-info-right {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 20rpx;
}
.hot-goods-number {
  font-size: 24rpx;
}
.hot-goods-wrap {
  display: flex;
}
.tags-item:nth-child(odd) {
  width:88rpx;
  border:1rpx solid var(--primary-color);
  height:30rpx;
  line-height: 30rpx;
  border-radius:4rpx;
  color: red;
  font-size:18rpx;
  font-weight:400;
  color:var(--primary-color);
  margin-right: 12rpx;
  text-align: center;
}
.tags-item:nth-child(even) {
  width:88rpx;
  border:1rpx solid rgba(255,178,78,1);
  height:30rpx;
  line-height: 30rpx;
  border-radius:4rpx;
  color: red;
  font-size:18rpx;
  font-weight:400;
  color:rgba(255,178,78,1);
  margin-right: 12rpx;
  text-align: center;
}

.hot-goods-tag2 {
  font-size: 28rpx;
}

.hot-goods-price {
  color: #999999;
  font-size: 22rpx;
  text-decoration: line-through;
  margin-left: 6rpx;
  font-weight: normal;
}
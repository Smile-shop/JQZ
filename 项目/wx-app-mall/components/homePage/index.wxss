/* components/homePage/index.wxss */
.index-container {
  width: 100vw;
  background-color: #fff;
  box-sizing: border-box;
}
/* 搜索框 */
.search-container {
  color: #A3AAB7;
  width: calc(750rpx - 52rpx);
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #F5F5F5;
}
.float-search-container {
  position: absolute;
  z-index: 2000;
  left: 26rpx;
  top: 20rpx;
  background-color: rgba(255, 255, 255, 0.25);
  color: white;
}
.left-content {
  width: 100%;
  height: 72rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.input-content {
  width: 570rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
}
/* 今日金价 */
.glod-price {
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  font-size: 20rpx;
}
.glod-price-title {
  color: #4D4D4D;
  width: 100rpx;
  flex-shrink: 0;
  margin-left: 28rpx;
}
.glod-price-list {
  flex-grow: 1;
  overflow: hidden;
  color: #EC7C68;
  margin-right: 28rpx;
}
.list-move {
  white-space: nowrap;
  width: auto;
  display: inline-block;
}
/* 轮播图 */
.swiper-item {
  height: 100%;
  width: 100%;
}
.swiper-item-img {
  width: 100%;
  height: 100%;
}
/* 分类 */
.classify-container {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  padding-top: 30rpx;
}
.classify-item {
  width: 150rpx;
  height: 180rpx;
  flex-shrink: 0;
  font-size: 22rpx;
  color: #A3AAB7;
  text-align: center;
}
.classify-item-img {
  margin: 16rpx auto;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #F5F5F5;
}
/* 爆款 */
.content-title {
  display: flex;
  align-items: center;
  padding: 28rpx;
  height: 40rpx;
  background-color: #fff;
}
.recommend-poster {
  width:690rpx;
  height:320rpx;
  background:rgba(242,243,244,1);
  border-radius:10rpx;
  overflow: hidden;
  margin: 30rpx 30rpx 20rpx 30rpx;
}
.recommend-poster .image {
  width: 100%;
  height: 100%;
}
.title-name {
  font-size: 28rpx;
  color: #4D4D4D;
  font-weight: bold;
  flex-grow: 1;
}
.title-more {
  font-size: 24rpx;
  color: #A3AAB7;
  height: 30rpx;
  display: flex;
  align-items: center;
}
.scroll-view_H {
  white-space: nowrap;
  background-color: #fff;
}
.scroll-view_H_moreB{
  display: inline-block;
  font-size: 24rpx;
  width: 80rpx;
  text-align: center;
  white-space: normal;
  position: relative;
  top: -30px;
}
.scroll-view_H_more{
  display: inline-block;
  width: 30rpx;
  height: 176rpx;
}
.more-icon{
  width: 24rpx;
  margin-top: 10rpx;
}
.scroll-view-item {
  display: inline-block;
  width: 176rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 12px;
  box-sizing: border-box;
  margin: 20rpx 0 20rpx 28rpx;
}
.scroll-view-item:last-child {
  margin-right: 28rpx;
}

/* 推荐款 */
.recommend-goods-list {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  /* margin-bottom: 104rpx; */
}
.recommend-goods-list-1-style{
  /* box-shadow: 0rpx 10rpx 0rpx rgba(234,191,96,0.17); */
  background: #fff;
}
.recommend-goods {
  width: 332rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 12px;
  box-sizing: border-box;
  margin-bottom: 32rpx;
  margin-top: 20rpx;
}
.recommend-goods:nth-child(1), .recommend-goods:nth-child(2){
  margin-top: 0;
}
.recommend-goods:nth-of-type(odd) {
  margin-left: 28rpx;
}
.recommend-goods:nth-of-type(even) {
  margin-left: 30rpx;
}
.more-show-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.hot-icon{
  width: 40rpx;
}
.more{
  width: 24rpx;
  margin-left: 10rpx;
}
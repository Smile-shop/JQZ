.slideview {
  position: relative;
  overflow: hidden;
}

.slideview__left {
  position: relative;
  z-index: 10;
}

.slideview__right {
  position: absolute;
  z-index: 1;
  left: 100%;
  top: 0;
  height: 100%;
}

.slideview__btn__wrp {
  position: absolute;
  left: 0;
  bottom: 0;
  text-align: center;
  min-width: 69px;
  height: 100%;
  white-space: nowrap;
}

.slideview__btn {
  color: #fff;
  width: 164rpx;
  font-size: 28rpx;
}

.slideview__btn-group_default .slideview__btn {
  background: #c7c7cc;
}

.slideview__btn-group_default ~ .slideview__btn-group_default:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid #fff;
  color: #fff;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.slideview__btn-group_default:first-child:before {
  display: none;
}

.slideview__btn-group_warn .slideview__btn {
  background: #fe3b30;
}

.slideview__btn-group_warn ~ .slideview__btn-group_warn:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid #fff;
  color: #fff;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.slideview__btn-group_warn:first-child:before {
  display: none;
}

.slideview_icon .slideview__btn__wrp {
  background: transparent;
  font-size: 0;
}

.slideview_icon .slideview__btn__wrp:first-child {
  padding-left: 16px;
}

.slideview_icon .slideview__btn__wrp:last-child {
  padding-right: 8px;
}

.slideview_icon .slideview__btn {
  width: 48px;
  height: 48px;
  line-height: 48px;
  padding: 0;
  display: inline-block;
  vertical-align: middle;
  border-radius: 50%;
  background-color: #fff;
}

.slideview_icon .slideview__btn__icon {
  display: inline-block;
  vertical-align: middle;
  width: 22px;
  height: 22px;
}

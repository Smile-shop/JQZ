/* components/order/goodsList/index.wxss */
.goods {
  display: flex;
  flex-direction: column;
  background: rgba(255,255,255,1);
}

.goods-title {
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  height: 88rpx;
  margin: 0 30rpx;
}
.shop-icon{
  width: 38rpx;
  margin-right: 12rpx;
}

.goods-title-name {
  flex: 1;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:600;
  color:#333;
  line-height:40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.goods-all {
  font-size:24rpx;
  font-weight:400;
  color:rgba(163,170,183,1);
}

.goods-content {
  display: flex;
  flex-direction: column;
}
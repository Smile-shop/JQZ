}

.cancel-text-diamand {
  display: flex;
  justify-content: center;
  height:80rpx;
  line-height: 80rpx;
  background:rgba(77,77,77,1);
  border-radius:40rpx;
  margin: 0rpx 30rpx;
  text-align: center;
  font-size:29prx;
  font-weight:600;
  color:rgba(255,255,255,1);
  margin-bottom: 10rpx;
}

.sum-unit-diamand, .sum-totalPrice-diamand {
  color:rgba(77,77,77,1);
  font-size: 28rpx;
  font-weight: 600;
}

.order-cancel {
  width:146rpx;
  height:60rpx;
  line-height: 60rpx;
  background:rgba(255,255,255,1);
  border-radius: 8rpx;
  border:1rpx solid rgba(204,204,204,1);
  text-align: center;
  font-size:24rpx;
  color:#333;
}
.marginLeft{
  margin-left: 20rpx;
}
.order-pay{
  background-color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
  color: #fff;
}
.concat-box{
  padding: 0 30rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #333;
  background-color: #fff;
}
.concat{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  height: 100rpx;
  font-weight: normal;
  font-size: 28rpx;
  padding: 0;
  text-align: center;
  line-height: 100rpx;
  border-top: 2rpx solid #eee;
}
.concat .service{
  font-size: 35rpx;
  margin-right: 16rpx;
  color: #000;
}
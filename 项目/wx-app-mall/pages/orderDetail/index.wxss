/* pages/mine/orderDetail/index.wxss */

.head, .order-info {
  background: rgba(255,255,255,1);
}

.head {
  display: flex;
}

.icon {
  margin: 53rpx 26rpx 50rpx 54rpx;
}

.head-title {
  height:36rpx;
  font-size:36rpx;
  font-weight:600;
  color:rgba(77,77,77,1);
  line-height:36rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.head-info {
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(163,170,183,1);
  line-height:24rpx;
  margin-bottom: 40rpx;
}

.split {
  height:20rpx;
  background:rgba(245,245,245,1);
}

.info-content {
  display: inline-block;
  line-height: 55rpx;
  margin: 2rpx 0;
  width:250rpx;
  font-size:24rpx;
  font-weight:400;
  color:#999;
}

.info-text {
  display: inline-block;
  font-size:24rpx;
  font-weight:400;
  color:#333;
  line-height: 55rpx;
}
.info-cancel {
  display: flex;
  align-items: flex-end;
  position: relative;
  z-index: 2;
}
.info-cancel-text {
  flex: 1;
}
.allPrice{
  text-align: right;
  color: #333;
}
.allPrice1{
  font-size: 28rpx;
  font-weight: bold;
  color: var(--primary-color);
}
.message{
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  position: relative;
  z-index: 1;
  top: -40rpx;
  overflow: hidden;
  background-color: #F8F8F8;
  padding-bottom: 80rpx;
  padding-bottom: calc(80rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(80rpx + env(safe-area-inset-bottom));
}


.tip {
  text-align: center;
  width:80rpx;
  height:36rpx;
  line-height: 36rpx;
  background:rgba(255,255,255,1);
  border-radius:18rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(236,124,104,1);
  margin-top: 12rpx;
  margin-left: 12rpx;
}

.footer-all {
  text-align: center;
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(163,170,183,1);
  line-height:24rpx;
  margin-top: 16rpx;
  margin-bottom: 46rpx;
}

.cancel {
  display: flex;
  position: fixed;
  bottom: 0rpx;
  width: calc(100% - 60rpx);
  background-color: rgba(255, 255, 255, 1);
  z-index: 2;
  justify-content: flex-end;
  align-items: center;
  border-top: 2rpx solid #eee;
  padding: 30rpx;
  padding-bottom: calc(30rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}
.time{
  font-size: 24rpx;
  color: #333;
  position: relative;
  left: -50rpx;
  width: 330rpx;
}
.time-text{
  color: var(--primary-color);
  margin-left: 10rpx;
  position: absolute;
  left: 108rpx;
}
.confirm{
  left: 30px;
}
.cancel-text {
  display: flex;
  justify-content: center;
  height:80rpx;
  line-height: 80rpx;
  background:rgba(77,77,77,1);
  border-radius:40rpx;
  margin: 0rpx 30rpx;
  text-align: center;
  font-size:29prx;
  font-weight:600;
  color:rgba(255,255,255,1);
}

.order-info {
  padding: 30rpx;
}

/* 钻石版 */

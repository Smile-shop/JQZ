/* pages/login/loginAddress/index.wxss */
.page-container {
  height: 100vh;
  background-color: #F5F5F5;
}

.content {
  display: flex;
  border-top: 1rpx solid rgba(245,245,245,1);
  padding-top: 32rpx;
  padding-bottom: 32rpx;
  background-color: rgba(255,255,255,1);
}

.content:first-child {
  border-top: none;
}

.head {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 86rpx;
}

.address-right {
  flex: 1;
}

.icon-select {
  width: 36rpx;
  height: 36rpx;
}

.icon-select image {
  width: 100%;
  height: 100%;
}

.top-container {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.name {
  display: inline-block;
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}

.phone {
  margin: 24rpx 0;
}

.phone, .address {
  height:40rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}

.distance {
  display: flex;
  justify-content: flex-end;
  margin-left: auto;
  margin-right: 30rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width:750rpx;
  height:100rpx;
  line-height: 100rpx;
  background:rgba(51,132,255,1);
  font-size:32rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  text-align: center;
}
/* pages/mine/orderDetail/index.wxss */

.head, .order-info {
  background: rgba(255,255,255,1);
}

.head {
  display: flex;
}

.icon {
  margin: 53rpx 26rpx 50rpx 54rpx;
}
.top-head{
  padding: 40rpx 0rpx 96rpx 0rpx;
  background-color: var(--primary-color);
}

.head-title {
  height:36rpx;
  font-size:36rpx;
  font-weight:600;
  color:rgba(77,77,77,1);
  line-height:36rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.head-info {
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(163,170,183,1);
  line-height:24rpx;
  margin-bottom: 40rpx;
}

.split {
  height:20rpx;
  background:rgba(245,245,245,1);
}

.info-content {
  display: inline-block;
  line-height: 55rpx;
  margin: 2rpx 0;
  width:250rpx;
  font-size:24rpx;
  font-weight:400;
  color:#999;
}

.info-text {
  display: inline-block;
  font-size:24rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height: 55rpx;
}
.info-cancel {
  display: flex;
  align-items: flex-end;
  position: relative;
  z-index: 2;
}
.info-cancel-text {
  flex: 1;
}
.allPrice{
  text-align: right;
  color: #333;
  font-size: 24rpx;
}
.allPrice1{
  font-size: 28rpx;
  color: var(--primary-color);
}
.message{
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  position: relative;
  z-index: 1;
  top: -40rpx;
  overflow: hidden;
  background-color: #F8F8F8;
  padding-bottom: 80rpx;
  padding-bottom: calc(80rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(80rpx + env(safe-area-inset-bottom));
}


.tip {
  text-align: center;
  width:80rpx;
  height:36rpx;
  line-height: 36rpx;
  background:rgba(255,255,255,1);
  border-radius:18rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(236,124,104,1);
  margin-top: 12rpx;
  margin-left: 12rpx;
}

.footer-all {
  text-align: center;
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(163,170,183,1);
  line-height:24rpx;
  margin-top: 16rpx;
  margin-bottom: 46rpx;
}

.cancel {
  display: flex;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  background-color: rgba(255, 255, 255, 1);
  z-index: 2;
  justify-content: flex-end;
  align-items: center;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.cancel .submit-btn{
  width: 232rpx;
  height: 100rpx;
  background-color: var(--primary-color);
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}
.cancel .sum{
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}
.cancel .sum .text{
  font-size: 24rpx;
  color: #333;
}
.cancel .sum .num{
  font-size: 36rpx;
  font-weight: 600;
  color: var(--primary-color);
}
.cancel-text {
  display: flex;
  justify-content: center;
  height:80rpx;
  line-height: 80rpx;
  background:rgba(77,77,77,1);
  border-radius:40rpx;
  margin: 0rpx 30rpx;
  text-align: center;
  font-size:29prx;
  font-weight:600;
  color:rgba(255,255,255,1);
}

.order-info {
  padding: 30rpx;
}
.coupon-title{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.coupon-value{
  font-size: 24rpx;
  color: #999;
}


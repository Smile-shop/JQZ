@charset "UTF-8";
.container {
  position: fixed;
  width: 100%;
  height: calc(100vh - 100rpx - 50px - constant(safe-area-inset-bottom));
  height: calc(100vh - 100rpx - 50px - env(safe-area-inset-bottom));
  background-color: #fff;
}

.nav_top {
  width: 176rpx;
  height: 100%;
  background: #F8F8F8;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
}

.nav_top_items {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 24rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 15rpx;
}

.nav_top_items.active {
  position: relative;
  background: #fff;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.nav_top_items.active::before {
  display: inline-block;
  width: 6rpx;
  height: 28rpx;
  background: var(--primary-color);
  content: '';
  position: absolute;
  top: 35rpx;
  left: 0;
}

.nav_right {
  position: absolute;
  top: 0;
  right: 0;
  width: calc(100% - 236rpx);
  height: 100%;
  padding: 30rpx;
  padding-top: 0rpx;
}

.nav_right .img {
  width: 100%;
}

.nav_right .img .image {
  overflow: hidden;
  border-radius: 15rpx;
  width: 100%;
  height: 100%;
}

.nav_right_items {
  float: left;
  width: 33.33%;
  text-align: center;
  padding: 30rpx 0;
}

.nav_right_items-image {
  width: 88rpx;
  height: 88rpx;
}

.nav_right_items-text {
  display: block;
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.nav_right-titleBox {
  text-align: center;
  height: 50rpx;
  margin-top: 10rpx;
  padding: 30rpx;
}

.nav_right-titleBox-title {
  width: 100%;
  line-height: 50rpx;
  white-space: nowrap;
  border-spacing: 2rem 0;
  font-size: 28rpx;
  font-weight: 500;
  color: #000104;
  position: relative;
}

.nav_right-titleBox-title::before, .nav_right-titleBox-title::after {
  position: absolute;
  top: 50%;
  content: "";
  width: 15rpx;
  height: 2rpx;
  background: #000104;
}

.nav_right-titleBox-title::before {
  left: -30rpx;
}

.nav_right-titleBox-title::after {
  right: -25rpx;
}

.nocate {
  padding: 30vh 100rpx 100rpx 100rpx;
  text-align: center;
}

.nocate-image {
  width: 220rpx;
  margin-bottom: 30rpx;
}

.nocate-text {
  font-size: 28rpx;
  display: block;
  color: #bbb;
}

/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

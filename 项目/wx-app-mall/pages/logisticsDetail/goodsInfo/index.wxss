/* pages/logisticsDetail/goodsInfo/index.wxss */
.goodsInfo{
  display: flex;
  align-items: center;
  padding: 30rpx;
}
.goodsInfo .goodsInfo-img{
  width: 144rpx;
  height: 144rpx;
  position: relative;
}
.goodsInfo .goodsInfo-img image{
  width: 100%;
  height: 100%;
}
.goodsInfo .goodsInfo-img .total{
  width: 100%;
  position: absolute;
  bottom: 0;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.33);
  font-size: 24rpx;
}
.goodsInfo .goodsInfo-content{
  flex: 1;
  padding-left: 20rpx;
  line-height: 50rpx;
}
.goodsInfo .goodsInfo-content .name{
  color: #333333;
  font-size: 28rpx;
}
.goodsInfo .goodsInfo-content .info{
  display: flex;
  font-size: 24rpx;
}
.goodsInfo .goodsInfo-content .info .left{
  width: 125rpx;
  color: #999;
}
.goodsInfo .goodsInfo-content .info .right{
  color: #333;
}
.copy{
  display: inline-block;
  background-color: #eee;
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
  line-height: 24rpx;
  font-size: 20rpx;
  margin-left: 16rpx;
}
/* components/global/modal/index.wxss */
.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 2000;
  background-color: rgba(0,0,0,0.5);
}
.modal {
  width: 560rpx;
  background: rgba(255,255,255,1);
  border-radius: 12rpx;
  position: absolute;
  top: calc(50vh - 154rpx);
  left: calc(50vw - 280rpx);
}
.modal-content {
  width: 100%;
  font-size: 28rpx;
  color: #4D4D4D;
}
.content {
  padding: 54rpx 56rpx;
  font-size: 28rpx;
  color: #4D4D4D;
  text-align: center;
  word-break: break-all;
}
.modal-button-list {
  display: flex;
}
.modal-button {
  flex-grow: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #f5f5f5;
  border-radius: 0 0 12rpx 12rpx;
}
.confirm-button {
  background-color: #4D4D4D;
  color: #fff;
}
.has-cancel-button {
  border-radius: 0 0 12rpx 0;
}
.no-cancel-button {
  border-radius: 0 0 12rpx 12rpx;
}
.gold-modal-button-1-style{
  background:rgba(219,176,81,1);
}
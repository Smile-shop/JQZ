/* components/local/goldPrice/index.wxss */
.glod-price {
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  font-size: 20rpx;
}
.glod-price-title {
  color: #4D4D4D;
  width: 100rpx;
  flex-shrink: 0; 
  margin-left: 28rpx;
}
.glod-price-list {
  flex-grow: 1;
  overflow: hidden;
  color: #EC7C68;
  margin-right: 28rpx;
}
.list-move {
  white-space: nowrap;
  width: auto;
  display: inline-block;
}
.box-1-style{
  margin-top: 16rpx;
  background: #fff;
}
.bg-1-style {
  background:rgba(219,176,81,1);
  border-radius:40rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  font-size: 20rpx;
  text-align: center;
  margin-right: 14rpx;
}
.font-1-style{
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:28px;
  font-size: 20rpx;
}
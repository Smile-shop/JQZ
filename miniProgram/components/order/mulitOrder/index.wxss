/* components/order/mulitOrder/index.wxss */
.order {
  background:rgba(255,255,255,1);
}
.order-header {
  display: flex;
  align-items: center;
  height: 87rpx;
  line-height: 87rpx;
  margin: 0 30rpx;
}
.order-mark {
  display: inline-block;
  width:6rpx;
  height:20rpx;
  background:rgba(77,77,77,1);
  margin-right: 30rpx;
}
.order-num {
  display: inline-block;
  height:24rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(77,77,77,1);
  line-height:24rpx;
}
.order-status {
  height:24rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(236,124,104,1);
  line-height:24rpx;
  margin-left: auto;
}
.line {
  height:1px;
  background:rgba(238,238,238,1);
  margin: 0 30rpx;
}
.scroll-region {
  display: block;
  width: 100%;
  height: 226rpx;
  line-height: 226rpx;
  white-space:nowrap;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.content-img {
  position: relative;
  display: inline-block;
  width:176rpx;
  height:176rpx;
  line-height: 176rpx;
  background:rgba(245,245,245,1);
  border-radius:12rpx;
  border:2rpx solid rgba(245,245,245,1);
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  margin-right: 20rpx;
  overflow: hidden;
}
.content-img image {
  width: 100%;
  height: 100%;
}

.tip {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width:80rpx;
  height:36rpx;
  line-height: 36rpx;
  font-size:20rpx;
  font-weight:400;
  text-align: center;
}
.content-all {
  position: relative;
  display: inline-block;
  width: 176rpx;
  height: 226rpx;
  line-height: 226rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(153,158,178,1);
}
.icon-region {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.order-footer {
  display: flex;
  flex-direction: column;
  margin: 0 30rpx;
  margin-top: 30rpx;
}
.order-total {
  display: flex;
  justify-content: flex-end;
  height:28rpx;
  line-height:28rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
  margin-bottom: 28rpx;
}
.container-cancel {
  display: flex;
  justify-content: flex-end;
}
.order-cancel {
  width:172rpx;
  height:60rpx;
  line-height: 60rpx;
  background:rgba(255,255,255,1);
  border-radius:50rpx;
  border:1rpx solid rgba(204,204,204,1);
  text-align: center;
  margin-bottom: 28rpx;
}
.order-cancel-text {
  width:96rpx;
  height:34rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(163,170,183,1);
  line-height:34rpx;
}
.sum-goods {
  margin-right: 12rpx;
}

.order-mark {
  margin-right: 16rpx;
}

.sum-totalPrice {
  font-size: 28rpx;
}

/* 钻石版 */
.order-status-diamand {
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(236,124,104,1);
  line-height:24rpx;
  margin-left: auto;
}

.order-mark-diamand {
  display: inline-block;
  width:6rpx;
  height:20rpx;
  background:rgba(77,77,77,1);
}

.tip-diamand {
  border-radius: 18rpx;
  background:rgba(255,255,255,1);
  color:rgba(236,124,104,1);
}

.price-unit-diamand, .sum-totalPrice-diamand {
  color: rgba(77,77,77,1);
}

.sum-totalPrice-diamand {
  font-weight: 600;
}

/* 黄金版 */
.order-gold {
  border-radius: 20rpx;
}
.order-status-gold {
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  line-height:24rpx;
  margin-left: auto;
  color:rgba(219,176,81,1);
}

.order-mark-gold {
  display: inline-block;
  width:6rpx;
  height:20rpx;
  background:rgba(219,176,81,1);
}

.tip-gold {
  border-radius: 2rpx;
  background:rgba(212,109,104,1);
  color: rgba(255,255,255,1);
}

.price-unit-gold, .sum-totalPrice-gold {
  color:rgba(193,17,17,1);
}

.sum-totalPrice-gold {
  font-weight: 600;
}
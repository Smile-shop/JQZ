/* components/order/singleOrder/index.wxss */
.order {
  background:rgba(255,255,255,1);
}
.order-header {
  display: flex;
  align-items: center;
  height: 87rpx;
  line-height: 87rpx;
  margin: 0 30rpx;
}
.order-mark {
  display: inline-block;
  width:6rpx;
  height:20rpx;
  background:rgba(77,77,77,1);
  margin-right: 30rpx;
}
.order-num {
  display: inline-block;
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
  line-height:24rpx;
}
.order-status {
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(236,124,104,1);
  line-height:24rpx;
  margin-left: auto;
}
.line {
  height:1px;
  background:rgba(238,238,238,1);
  margin: 0 30rpx;
}
.order-content {
  display: flex;
}
.content-img {
  width:176rpx;
  height:176rpx;
  background:rgba(245,245,245,1);
  border-radius:12rpx;
  border:2rpx solid rgba(245,245,245,1);
  margin: 20rpx 20rpx 30rpx 30rpx;
}
.content-name {
  height:40rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(77,77,77,1);
  line-height:40rpx;
}
.content-code {
  margin-top: 6rpx;
  height:34rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
  line-height:34rpx;
}
.content-tag {
  margin-top: 6rpx;
  height:34rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
  line-height:34rpx;
}
.tag-item {
  margin-right: 16rpx;
}
.content-certificate {
  margin-top: 6rpx;
  height:34rpx;
  font-size:20rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
  line-height:28rpx;
}
.content-price {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
}
.price-unit {
  height:40rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
  line-height:34rpx;
}
.price-num {
  height:40rpx;
  font-size:24rpx;
  font-weight:600;
  color:rgba(77,77,77,1);
  line-height:34rpx;
}
.count-unit {
  margin-right: 12rpx;
  height:40rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
  line-height:34rpx;
  }
.count-num {
  height:40rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(77,77,77,1);
  line-height:34rpx;
}
.tip {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width:80rpx;
  height:36rpx;
  line-height: 36rpx;
  font-size:20rpx;
  font-weight:400;
  text-align: center;
}
.order-footer {
  margin: 0 20rpx;
}
.order-total {
  display: flex;
  justify-content: flex-end;
  height:28rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
  line-height:28rpx;
  margin-bottom: 28rpx;
}
.container-cancel {
  display: flex;
  justify-content: flex-end;
}
.order-cancel {
  width:172rpx;
  height:60rpx;
  line-height: 60rpx;
  background:rgba(255,255,255,1);
  border-radius:30rpx;
  border:1rpx solid rgba(204,204,204,1);
  text-align: center;
  margin-bottom: 28rpx;
}
.order-cancel-text {
  width:96rpx;
  height:34rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(163,170,183,1);
  line-height:34rpx;
}
.content-img-confirm {
  position: relative;
  width:216rpx;
  height:216rpx;
  background:rgba(245,245,245,1);
  border-radius:12rpx;
  border:2rpx solid rgba(245,245,245,1);
  margin: 30rpx;
  overflow: hidden;
}
.order-content:not(:first-child) .content-img-confirm {
  margin: 15rpx 30rpx 15rpx;
}
.content-img-confirm image {
  width: 100%;
  height: 100%;
}
.content-text-confirm {
  flex: 1;
  margin-top: 30rpx;
  margin-right: 30rpx;
}
.content-code, .content-certificate {
  margin: 6rpx 0rpx;
}
.order-footer-confirm {
  display: flex;
  flex-direction: column;
  margin: 0 30rpx;
  margin-top: 30rpx;
}
.sum-price {
  margin-left: 16rpx;
}

.order-mark {
  margin-right: 16rpx;
}

/* 钻石版 */
.order-status-diamand {
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(236,124,104,1);
  line-height:24rpx;
  margin-left: auto;
}

.order-mark-diamand {
  display: inline-block;
  width:6rpx;
  height:20rpx;
  background:rgba(77,77,77,1);
}
.tip-diamand {
  border-radius:18rpx;
  background:rgba(255,255,255,1);
  color:rgba(236,124,104,1);
}
.sum-unit-diamand, .sum-tottalPrice-gold, .price-num-diamand, .price-unit-diamand {
  color:rgba(77,77,77,1);
}

.price-num-diamand, .sum-tottalPrice-diamand {
  font-size: 28rpx;
  font-weight: 600;
}

/* 黄金版 */
.order-gold {
 border-radius: 20rpx;
}

.order-status-gold {
  height:24rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(219,176,81,1);
  line-height:24rpx;
  margin-left: auto;
}

.order-mark-gold {
  display: inline-block;
  width:6rpx;
  height:20rpx;
  background:rgba(219,176,81,1);
}
.tip-gold {
  border-radius:2rpx;
  background:rgba(212,109,104,1);
  color: rgba(255,255,255,1);
}

.sum-unit-gold, .sum-tottalPrice-gold, .price-num-gold, .price-unit-gold {
  color:rgba(193,17,17,1);
}

.price-num-gold, .sum-tottalPrice-gold {
  font-size: 28rpx;
  font-weight: 600;
}
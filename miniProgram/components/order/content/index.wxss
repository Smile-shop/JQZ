/* components/order/content/index.wxss */
.list-content {
  display: flex;
  justify-content: flex-start;
  background-color: rgba(255, 255, 255, 1);
  padding-bottom: 34rpx;
}
.container-img {
  position: relative;
  width:216rpx;
  height:216rpx;
  background:rgba(245,245,245,1);
  border-radius:12rpx;
  border:2rpx solid rgba(245,245,245,1);
  margin: 0rpx 30rpx 0rpx 30rpx;
  overflow: hidden;
}
.container-img image {
  width: 100%;
  height: 100%;
}
.img-tip {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width:80rpx;
  height:36rpx;
  line-height: 36rpx;
  font-size:20rpx;
  font-weight:400;
  text-align: center;
}
.content-text {
  flex: 1;
  margin-right: 30rpx;
}
.text-name {
  height:40rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(77,77,77,1);
  line-height:40pxr;
  margin-top: 4rpx;
  margin-bottom: 6rpx;
}
.text-code {
  height:34rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
  line-height:34rpx;
  margin-bottom: 6rpx;
}
.text-arg {
  height:34rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
  line-height:34rpx;
  margin-bottom: 6rpx;
}
.tag-item {
  margin-right: 16rpx;
}
.text-certificate {
  height:34rpx;
  font-size:20rpx;
  font-weight:500;
  color:rgba(163,170,183,1);
  line-height:28rpx;
  margin-bottom: 16rpx;
}
.text-total {
  display: flex;
  justify-content: space-between;
  height:40rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(77,77,77,1);
  line-height:34rpx;
}

.sum-price {
  font-weight: 600;
}

.sum-count {
  margin-left: 12rpx;
}

.sum-price, .sum-count {
  font-size: 28rpx;
}

/* 钻石版 */
.img-tip-diamand {
  color:rgba(236,124,104,1);
  background:rgba(255,255,255,1);
  border-radius:18rpx;
}
.tag-item-diamand {
  color:rgba(77,77,77,1);
}

/* 黄金版 */
.img-tip-gold{
  color: rgba(255,255,255,1);
  background:rgba(212,109,104,1);
  border-radius:2px;
}
.tag-item-gold {
  color:rgba(193,17,17,1);
}
.radius-gold {
  border-radius: 0rpx 0rpx 20rpx 20rpx;
  overflow: hidden;
}